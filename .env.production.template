# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_NAME=myglambeauty_prod
DATABASE_USER=myglambeauty_user
DATABASE_PASSWORD=your_secure_database_password
DATABASE_URL=postgresql://myglambeauty_user:your_secure_database_password@postgres:5432/myglambeauty_prod

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM=noreply@myglambeauty.com

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.myglambeauty.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myglambeauty-backups
BACKUP_S3_REGION=us-east-1

# Security Configuration
CORS_ORIGIN=https://myglambeauty.com,https://www.myglambeauty.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
CACHE_TTL=300
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3
