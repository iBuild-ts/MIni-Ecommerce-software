# Namecheap Production Environment Configuration
NODE_ENV=production

# Database Configuration (MySQL for Namecheap)
DATABASE_NAME=myglambeauty_prod
DATABASE_USER=myglambeauty_user
DATABASE_PASSWORD=your_secure_database_password
DATABASE_URL=mysql://myglambeauty_user:your_secure_database_password@localhost:3306/myglambeauty_prod

# Redis Configuration (Skip for now - not available on Namecheap)
# REDIS_PASSWORD=your_secure_redis_password
# REDIS_URL=redis://:your_secure_redis_password@redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration (SendGrid for Namecheap)
SMTP_HOST=smtp.sendgrid.net
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM=noreply@myglambeauty.com

# Frontend URLs
NEXT_PUBLIC_API_URL=https://myglambeauty.com/api
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# File Upload Configuration
UPLOAD_DIR=/home/yourusername/uploads
MAX_FILE_SIZE=5242880

# Security Configuration
CORS_ORIGIN=https://myglambeauty.com,https://www.myglambeauty.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
CACHE_TTL=300
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=/home/yourusername/logs/app.log

# Namecheap Specific Configuration
SERVER_PORT=3000
PUBLIC_URL=https://myglambeauty.com
BASE_PATH=/
