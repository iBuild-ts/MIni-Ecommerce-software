{
  "name": "myglambeauty-supply",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter \"@myglambeauty/*\" dev",
    "build": "pnpm --filter \"@myglambeauty/*\" build",
    "start": "pnpm --filter \"@myglambeauty/api\" start",
    "test": "pnpm --filter \"@myglambeauty/*\" test",
    "test:ci": "pnpm --filter \"@myglambeauty/*\" test:ci",
    "lint": "pnpm --filter \"@myglambeauty/*\" lint",
    "type-check": "pnpm --filter \"@myglambeauty/*\" type-check",
    "clean": "pnpm --filter \"@myglambeauty/*\" clean",
    "db:generate": "pnpm --filter @myglambeauty/db prisma generate",
    "db:push": "pnpm --filter @myglambeauty/db prisma db push",
    "db:migrate": "pnpm --filter @myglambeauty/db prisma migrate dev",
    "db:studio": "pnpm --filter @myglambeauty/db prisma studio",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "deploy:production-force": "./scripts/deploy.sh production false false true",
    "deploy:aws": "./scripts/production-deploy.sh",
    "deploy:aws-staging": "./scripts/production-deploy.sh --environment staging",
    "deploy:aws-production": "./scripts/production-deploy.sh --environment production",
    "backup:create": "./scripts/backup.sh create",
    "backup:restore": "./scripts/backup.sh restore",
    "monitoring:up": "docker-compose -f docker-compose.prod.yml up -d prometheus grafana",
    "security:audit": "pnpm audit",
    "security:check": "snyk test"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  }
}
